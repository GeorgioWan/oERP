<!DOCTYPE html>
<html>
	<head>
	  <title>OERP</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<%= render 'shared/navbar' %>

		<div class="container" id="oERP-notice">
			<%= render 'shared/notice' %>
		</div>
		<div class="container-fluid">
			<div class="row">
				<% if user_signed_in? %>
					<div class="col-sm-2 col-md-6 col-lg-3"><%= render 'shared/slidebar' %></div>
					<div class="col-sm-10 col-md-6 col-lg-9"><%= yield %></div>
				<% else %>
					<div class="col-md-offset-4 col-md-3"><%= yield %></div>
				<% end %>
			</div>
		</div>

		<%= render 'shared/footer' %>

	</body>
</html>
