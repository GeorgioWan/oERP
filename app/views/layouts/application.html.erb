<!DOCTYPE html>
<html>
	<head>
	  <title>OERP</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>

		<%= render 'shared/navbar' %>

		<%= render 'shared/notice' %>

		<div class="container-fluid">
			<div class="row">
				<% if user_signed_in? %>
					<div id="oERP-slidebar" class="col-sm-2 col-md-2"><%= render 'shared/slidebar' %></div>
					<div id="oERP-contain"  class="col-sm-8 col-md-7"><%= yield %></div>
				<% else %>
					<div class="col-md-3 col-md-offset-4"><%= yield %></div>
				<% end %>
			</div>
		</div>

		<%= render 'shared/footer' %>

	</body>
</html>
