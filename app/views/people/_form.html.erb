<!-- Person form_partial -->
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @person do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :nameFull,  autofocus: true, placeholder: @nameFull %>
        <%= f.input :nameShort, autofocus: true, placeholder: @nameShort %>
        <%= f.input :phone,     autofocus: true, placeholder: @phone, as: :tel %>
        <%= f.input :email,     autofocus: true, placeholder: @email %>
      </div>
      <hr>
      <div class="form-actions text-right">
        <%= f.button  :submit,      @button, class: "btn btn-success" %>
        <%= link_to  "Cancel",  people_path, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>